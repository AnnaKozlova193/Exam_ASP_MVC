@model MyScore_ASP.Models.Product

@{
    ViewBag.Title = "Удалить товар из базы";
}

<h3 style="color:maroon">@ViewBag.Title</h3>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @*@Html.DisplayNameFor(model => model.Category.NameCategory)*@
            Название категории

        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.NameCategory)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.Table_Matufactur.NameManufacturer)*@
            Торговая марка
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Table_Matufactur.NameManufacturer)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.NameProduct)*@
            Название товара
        </dt>

        <dd>
